root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.java]
indent_size = 4

[*.md]
max_line_length = off
trim_trailing_whitespace = false

# Liting is done using Black.
[*.py]
indent_style = unset
indent_size = unset
